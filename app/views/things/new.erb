<h2>Create a new thing</h2>

<form method="post" action="/things">
  <div class="field">
    <label for="thing_name">Name</label>
    <input type="text" name="name" id="thing_name" />
  </div>
  <div class="field">
    <label for="thing_description">Description</label>
    <textarea name="description" id="thing_description"></textarea>
  </div>
  <div class="field">
    <input type="submit" value="Create New Thing"/>
  </div>
</form>
